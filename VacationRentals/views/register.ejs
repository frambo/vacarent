<% include layout/pageTop %>

<form role="form" action="/register" method="POST">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="center-block">
          <h3>register</h3>
        </div>
        <div class="row">
          <div class="col-md-5">

            <h3>Use other accounts</h3>

            <p>You can also sign in using your Facebook or Google accounts</p>
            <a href="/auth/facebook" class="btn btn-primary btn-lg btn-block" role="button">Login with Facebook</a>
            <a href="/auth/google" class="btn btn-default btn-lg btn-block" role="button">Login with Google</a>
          </div>
          <div class="col-md-5 col-md-offset-2">

            <h3 class="header">Using your account</h3>

            <input type="email" class="form-control input-lg" id="inputEmail" name="username" placeholder="Enter email">
            <input type="password" class="form-control input-lg" id="inputPassword" name="password"
                   placeholder="Password">
            <input type="password" class="form-control input-lg" id="inputPasswordRepeat" name="password"
                   placeholder="Repeat Password">
            <button class="btn btn-large btn-success btn-block btn-lg" type="submit">Regist</button>
            <p><a href="#">Forgot your password?</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>

<% include layout/pageBottom %>